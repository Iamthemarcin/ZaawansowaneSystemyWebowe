{% extends 'securityBase.html.twig' %}
{% block title %}Logowanie{% endblock %}
{% block content %}

    <!-- Login form -->
    <form class="login-form" method="post">
        <div class="card mb-0">
            <div class="card-body">
                <div class="text-center mb-3">

                    <img  alt="logo" src = {{ asset('global_assets/images/logo.png')}}>
                    <h5 class="mb-0">Logowanie</h5>
                    <span class="d-block text-muted">Wpisz swoje dane</span>
                </div>

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div class="form-group form-group-feedback form-group-feedback-left">
                    <input type="email" class="form-control" placeholder="E-mail"   value="{{ last_username }}" name="email" id="inputEmail"  required autofocus>
                    <div class="form-control-feedback">
                        <i class="icon-user text-muted"></i>
                    </div>
                </div>



                <div class="form-group form-group-feedback form-group-feedback-left">
                    <input type="password" name="password" id="inputPassword" class="form-control"   placeholder="Hasło" required>
                    <div class="form-control-feedback">
                        <i class="icon-lock2 text-muted"></i>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

{#                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
{#                See https://symfony.com/doc/current/security/remember_me.html#}
{#                <div class="checkbox mb-3">#}
{#                    <label>#}
{#                        <input type="checkbox" name="_remember_me"> Remember me#}
{#                    </label>#}
{#                </div>#}
{#                #}
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Zaloguj się <i class="icon-circle-right2 ml-2"></i></button>
                </div>

                <div class="text-center">
                    <a href="odzyskanie_hasla.html">Zmień hasło</a>
                </div>
            </div>
        </div>
    </form>
    <!-- /login form -->


{% endblock content %}
