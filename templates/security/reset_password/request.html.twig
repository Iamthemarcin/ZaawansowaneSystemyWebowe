{% extends 'securityBase.html.twig' %}
{% block title %}Zmiana hasła{% endblock %}
{% block content %}
    <!-- Password recovery form -->
    <form class="login-form" action="index.html">
        <div class="card mb-0">
            <div class="card-body">
                <div class="text-center mb-3">
                    <img  src = global_assets/images/logo.png>
                    <h5 class="mb-0">Zmień hasło</h5>
                    <span class="d-block text-muted">Podaj poniżej nowe hasło</span>
                </div>

                <div class="form-group form-group-feedback form-group-feedback-right ">
                    <input type="password" class="form-control" placeholder="Nowe hasło">
                    <div class="form-control-feedback">
                        <i class="icon-lock2  text-muted"></i>
                    </div>

                </div>
                <div class="form-group form-group-feedback form-group-feedback-right ">

                    <input type="password" class="form-control" placeholder="Powtórz nowe hasło">
                    <div class="form-control-feedback">
                        <i class="icon-lock2  text-muted"></i>
                    </div>
                </div>

                <button type="submit" class="btn bg-blue btn-block"><i class="icon-spinner11 mr-2"></i> Zmiana hasła</button>
            </div>
        </div>
    </form>
    <!-- /password recovery form -->

{% endblock content %}


