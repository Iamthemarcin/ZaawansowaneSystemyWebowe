{% extends 'base.html.twig' %}



{% block title %}
	Lista klientów
{% endblock %}


{% block references %}
	<!-- Global stylesheets -->
	<link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
	<link href="../../global_assets/css/icons/icomoon/styles.min.css" rel="stylesheet" type="text/css">
	<link href="../../assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
	<link href="../../assets/css/bootstrap_limitless.min.css" rel="stylesheet" type="text/css">
	<link href="../../assets/css/layout.min.css" rel="stylesheet" type="text/css">
	<link href="../../assets/css/components.min.css" rel="stylesheet" type="text/css">
	<link href="../../assets/css/colors.min.css" rel="stylesheet" type="text/css">
	<!-- /global stylesheets -->

	<!-- Core JS files -->
	<script src="../../global_assets/js/main/jquery.min.js"></script>
	<script src="../../global_assets/js/main/bootstrap.bundle.min.js"></script>
	<script src="../../global_assets/js/plugins/loaders/blockui.min.js"></script>
	<!-- /core JS files -->

	<!-- Theme JS files -->


	<script src="../../assets/js/app.js"></script>
	<script src="../../global_assets/js/demo_pages/datatables_responsive.js"></script>
	<script src="../../global_assets/js/tableSearch.js"></script>

	<!-- /theme JS files -->

{% endblock %}


{% block content %}
			<!-- Page header -->
			<div class="page-header page-header-light">

				<div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
					<div class="d-flex">
						<div class="breadcrumb">
							<a href='{{ path('home')}}' class="breadcrumb-item"><i class="icon-home2 mr-2"></i>Dashboard</a>

							<span class="breadcrumb-item active">Lista klientów</span>
						</div>

						<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
					</div>

				</div>
			</div>
			<!-- /page header -->


			<!-- Content area -->
			<div class="content">

				<!-- Basic responsive configuration -->
				<div class="card">
					<div class="card-header header-elements-inline">
						<h5 class="card-title">Lista klientów</h5>

					</div>

					<!--wyszukiwanie-->
					<div class="datatable-header">
						<div id="DataTables_Table_0_filter" class="dataTables_filter">
							<label>
								<span>Filter:</span>
								<input type="text" id = "myInput" onkeyup=tableSearch() placeholder="Wyszukaj" aria-controls="DataTables_Table_0">
							</label>
						</div>
						<div class="dt-buttons">
							<a class="btn btn-light buttons-copy buttons-html5" href="{{ path('client_add') }}">Dodaj klienta</a>

						</div>
						</div>
					<!--/wyszukiwanie-->


					<table id = "myTable" class="table datatable-responsive text-center">
						<thead>
							<tr>
								<th>ID</th>
								<th>Nazwa firmy</th>
								<th>E-mail</th>

								<th>Status</th>
								<th class="text-center">Akcje</th>
							</tr>
						</thead>
						<tbody>
							{% for client in clients %}
							<tr>
								<td>{{ client.id }}</td>
								<td>{{ client.companyName }}</td>
								<td><a href="#">{{ client.email }}</a></td>

								<td><span class="badge badge-success">{{ client.clientStatus }}</span></td>
								<td class="text-center">
									<div class="list-icons">
										<div class="dropdown">
											<a href="#" class="list-icons-item" data-toggle="dropdown">
												<i class="icon-menu9"></i>
											</a>

											<div class="dropdown-menu dropdown-menu-right">
												<a href="#" class="dropdown-item"><i class="icon-user"></i> Podgląd</a>
												<a href="{{ path('client_edit') }}" class="dropdown-item"><i class="icon-quill2"></i> Edycja</a>
												<a href="#" class="dropdown-item"><i class="icon-user-block"></i> Zablokowanie</a>
											</div>
										</div>
									</div>
								</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
				<!-- /basic responsive configuration -->




			</div>


			<!-- /content area -->
{% endblock %}
