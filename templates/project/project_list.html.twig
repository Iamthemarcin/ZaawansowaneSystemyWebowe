{% extends 'base.html.twig' %}
{% block title%}Lista projektów{% endblock %}
{% block references %}

    <!-- Global stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="../../global_assets/css/icons/icomoon/styles.min.css" rel="stylesheet" type="text/css">
    <link href="../../assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="../../assets/css/bootstrap_limitless.min.css" rel="stylesheet" type="text/css">
    <link href="../../assets/css/layout.min.css" rel="stylesheet" type="text/css">
    <link href="../../assets/css/components.min.css" rel="stylesheet" type="text/css">
    <link href="../../assets/css/colors.min.css" rel="stylesheet" type="text/css">
    <!-- /global stylesheets -->

    <!-- Core JS files -->
    <script src="../../global_assets/js/main/jquery.min.js"></script>
    <script src="../../global_assets/js/main/bootstrap.bundle.min.js"></script>
    <script src="../../global_assets/js/plugins/loaders/blockui.min.js"></script>
    <!-- /core JS files -->

    <!-- Theme JS files -->
    <script src="../../global_assets/js/plugins/tables/datatables/datatables.min.js"></script>
    <script src="../../global_assets/js/plugins/tables/datatables/extensions/responsive.min.js"></script>
    <script src="../../global_assets/js/plugins/forms/selects/select2.min.js"></script>

    <script src="../../assets/js/app.js"></script>
    <script src="../../global_assets/js/demo_pages/datatables_responsive.js"></script>
    <script src="../../global_assets/js/tableSearch.js"></script>
    <!-- /theme JS files -->

{% endblock %}
{% block content %}
    <!-- Page header -->
    <div class="page-header page-header-light">

        <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
            <div class="d-flex">
                <div class="breadcrumb">
                    <a href="{{ path('home') }}"class="breadcrumb-item"><i class="icon-home2 mr-2"></i>Dashboard</a>

                    <span class="breadcrumb-item active">Lista projektów</span>
                </div>

                <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
            </div>

        </div>
    </div>
    <!-- /page header -->


    <!-- Content area -->
    <div class="content">

        <!-- Basic responsive configuration -->
        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title">Lista projektów</h5>

            </div>

            <!--wyszukiwanie-->
            <div class="datatable-header">
                <div id="DataTables_Table_0_filter" class="dataTables_filter">
                    <label>
                        <span>Filter:</span>
                        <input type="text" id = "myInput" onkeyup=tableSearch() placeholder="Wyszukaj" aria-controls="DataTables_Table_0">
                    </label>
                </div>
                <div class="dt-buttons">
                    <a class="btn btn-light buttons-copy buttons-html5" href='{{ path("project_add") }}'>Dodaj projekt</a>

                </div>
                <div class="dataTables_length" id="DataTables_Table_0_length">
                    <label>
                        <span>Show:</span> <select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" class="select2-hidden-accessible" data-select2-id="1" tabindex="-1" aria-hidden="true">
                            <option value="10" data-select2-id="3">10</option><option value="25">25</option><option value="50">50
                            </option><option value="100">100</option></select>
                        <span class="select2 select2-container select2-container--default" dir="ltr" data-select2-id="2" style="width: auto;">
										<span class="selection">
											<span class="select2-selection select2-selection--single" role="combobox" aria-haspopup="true" aria-expanded="false" tabindex="0" aria-disabled="false" aria-labelledby="select2-DataTables_Table_0_length-j2-container">
												<span class="select2-selection__rendered" id="select2-DataTables_Table_0_length-j2-container" role="textbox" aria-readonly="true" title="10">10</span>
												<span class="select2-selection__arrow" role="presentation"><b role="presentation"></b></span></span></span><span class="dropdown-wrapper" aria-hidden="true"></span></span>
                    </label></div></div>
            <!--/wyszukiwanie-->


            <table id = "myTable" class="table  datatable-responsive text-center" >
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Domena</th>
                    <th>Klient</th>
                    <th>Typ projektu</th>
                    <th>Status minutowy</th>
                    <th>Status dniowy</th>
                    <th>Status aktualizacji</th>
                    <th class="text-center">Akcje</th>
                </tr>
                </thead>
                <tbody>
                {% for project in projects %}
                <tr >
                    <td>{{ project.id}} </td>
                    <td>{{ project.domain }}</td>
                    <td><a href="#">{{ project.client }}</a></td>
                    <td ><span class="badge badge-success">{{ project.status }}</span></td>
                    <td><span class="badge badge-success">{{ project.minutetest }}</span></td>
                    <td><span class="badge badge-danger">{{ project.speedtest }}</span></td>
                    <td><span class="badge badge-success">{{ project.updatetest }}</span></td>


                    <td class="text-center">
                        <div class="list-icons">
                            <div class="dropdown">
                                <a href="#" class="list-icons-item" data-toggle="dropdown" aria-expanded="false">
                                    <i class="icon-menu9"></i>
                                </a>

                                <div class="dropdown-menu dropdown-menu-right" x-placement="top-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(22px, 1px, 0px);">
                                    <a href="{{ path('project_view') }}" class="dropdown-item"><i class="icon-user"></i> Podgląd</a>
                                    <a href="{{ path('project_edit') }}" class="dropdown-item"><i class="icon-quill2"></i> Edycja</a>
                                    <a href="#" class="dropdown-item"><i class="icon-user-block"></i> Zablokowanie</a>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td  style="display:none;"><span class="badge badge-success">Aktywny</span></td>
                </tr>

                {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /basic responsive configuration -->




    </div>
    <!-- /content area -->
{% endblock %}